    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug constante.js",
            "program": "${workspaceFolder}/constante.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug pergunta.js",
            "program": "${workspaceFolder}/pergunta.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug variaveis.js",
            "program": "${workspaceFolder}/variaveis.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug arquivo aberto",
            "program": "${file}"
        }
    ]
}